<Window x:Class="RevitAddinCSharp.UI.LevelSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen"
        Height="560"
        Width="720"
        MinHeight="520"
        MinWidth="680"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Margin="0 0 16 0"
                    Background="#F5F5F5"
                    BorderBrush="#DDDDDD"
                    BorderThickness="1"
                    CornerRadius="4">
                <StackPanel>
                    <TextBlock Text="Bereiche"
                               FontWeight="Bold"
                               Margin="12 12 12 8" />
                    <ListBox x:Name="CategoryList"
                             Margin="8 0 8 12"
                             SelectionChanged="OnCategorySelectionChanged"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBoxItem Content="Ebenen" Tag="Levels" IsSelected="True" />
                        <ListBoxItem Content="Ansichten" Tag="Views" />
                        <ListBoxItem Content="Menü" Tag="Menu" />
                        <ListBoxItem Content="Weitere Funktionen" Tag="Future" />
                    </ListBox>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1">
                <ScrollViewer x:Name="LevelsContent"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <GroupBox Header="Gebäudegeschosse" Margin="0 0 0 16">
                            <Grid Margin="0 8 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <CheckBox x:Name="BuildingStoryCheckBox"
                                          Grid.Row="0"
                                          Grid.ColumnSpan="2"
                                          Content="Neue Ebenen als Gebäudegeschoss markieren"
                                          Margin="0 0 0 12" />

                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Text="Ebenentyp (Name):"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <ComboBox x:Name="LevelTypeCombo"
                                          Grid.Row="1"
                                          Grid.Column="1"
                                          Height="28"
                                          Margin="0 0 0 8"
                                          IsEditable="False"
                                          DisplayMemberPath="Name"
                                          SelectedValuePath="Name" />

                                <CheckBox x:Name="RenameExistingCheckBox"
                                          Grid.Row="2"
                                          Grid.ColumnSpan="2"
                                          Content="Bestehende Ebenen entsprechend benennen"
                                          Margin="0 0 0 12" />

                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Text="Stellen für Ebenennummern:"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="LevelDigitsInput"
                                         Grid.Row="3"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 8"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Grid.Row="4"
                                           Grid.Column="0"
                                           Text="Namenssuffix (z. B. _OKRF):"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="LevelSuffixInput"
                                         Grid.Row="4"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 8"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Grid.Row="5"
                                           Grid.Column="0"
                                           Text="Benennung Erdgeschoss:"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="GroundTokenInput"
                                         Grid.Row="5"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 8"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Grid.Row="6"
                                           Grid.Column="0"
                                           Text="Benennung Obergeschosse:"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="UpperTokenInput"
                                         Grid.Row="6"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 8"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Grid.Row="7"
                                           Grid.Column="0"
                                           Text="Benennung oberstes Geschoss:"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="TopTokenInput"
                                         Grid.Row="7"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 8"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Grid.Row="8"
                                           Grid.Column="0"
                                           Text="Benennung Untergeschosse:"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="BasementTokenInput"
                                         Grid.Row="8"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 12"
                                         VerticalContentAlignment="Center" />
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Oberkanten" Margin="0 0 0 16">
                            <TextBlock Text="Platzhalter für zukünftige Einstellungen zu Oberkanten."
                                       Margin="0 4 0 4" />
                        </GroupBox>

                        <GroupBox Header="Unterkanten" Margin="0 0 0 16">
                            <TextBlock Text="Platzhalter für zukünftige Einstellungen zu Unterkanten."
                                       Margin="0 4 0 4" />
                        </GroupBox>

                        <GroupBox Header="Hilfsebenen">
                            <TextBlock Text="Platzhalter für zukünftige Einstellungen zu Hilfsebenen."
                                       Margin="0 4 0 4" />
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <ScrollViewer x:Name="MenuContent"
                              Visibility="Collapsed"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel>
                        <GroupBox Header="Gebäudegeschosse generieren">
                            <Grid Margin="0 8 0 0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           Text="Anzahl Obergeschosse (Standard):"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="DefaultAboveCountInput"
                                         Grid.Row="0"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 8"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Grid.Row="1"
                                           Grid.Column="0"
                                           Text="Geschosshöhe Obergeschosse [mm] (Standard):"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="DefaultAboveHeightInput"
                                         Grid.Row="1"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 8"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Grid.Row="2"
                                           Grid.Column="0"
                                           Text="Anzahl Untergeschosse (Standard):"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="DefaultBelowCountInput"
                                         Grid.Row="2"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 8"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Grid.Row="3"
                                           Grid.Column="0"
                                           Text="Geschosshöhe Untergeschosse [mm] (Standard):"
                                           Margin="0 0 12 8"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="DefaultBelowHeightInput"
                                         Grid.Row="3"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 8"
                                         VerticalContentAlignment="Center" />

                                <TextBlock Grid.Row="4"
                                           Grid.Column="0"
                                           Text="Höhe für Berechnung [mm]:"
                                           Margin="0 0 12 0"
                                           VerticalAlignment="Center" />
                                <TextBox x:Name="ComputationHeightInput"
                                         Grid.Row="4"
                                         Grid.Column="1"
                                         Height="28"
                                         Margin="0 0 0 0"
                                         VerticalContentAlignment="Center" />
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <Border x:Name="PlaceholderContent"
                        Visibility="Collapsed"
                        Background="Transparent"
                        BorderThickness="0">
                    <TextBlock x:Name="PlaceholderText"
                               Text="Auswahl wird vorbereitet."
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               FontStyle="Italic"
                               Foreground="#666666" />
                </Border>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Zurücksetzen"
                    Width="120"
                    Margin="0 0 12 0"
                    Padding="12 6"
                    Click="OnResetClick" />
            <Button Content="Abbrechen"
                    Width="110"
                    Margin="0 0 12 0"
                    Padding="12 6"
                    Click="OnCancelClick" />
            <Button Content="OK"
                    Width="110"
                    Padding="12 6"
                    Click="OnOkClick" />
        </StackPanel>
    </Grid>
</Window>

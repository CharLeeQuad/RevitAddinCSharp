<Window x:Class="RevitAddinCSharp.UI.LevelSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Einstellungen"
        Height="360"
        Width="520"
        MinHeight="340"
        MinWidth="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <CheckBox x:Name="BuildingStoryCheckBox"
                  Grid.Row="0"
                  Grid.Column="0"
                  Grid.ColumnSpan="2"
                  Content="Neue Ebenen als Gebäudegeschoss markieren"
                  Margin="0 0 0 16" />

        <TextBlock Grid.Row="1"
                   Grid.Column="0"
                   Text="Ebenentyp (Name):"
                   VerticalAlignment="Center"
                   Margin="0 0 12 16" />
        <ComboBox x:Name="LevelTypeCombo"
                  Grid.Row="1"
                  Grid.Column="1"
                  Margin="0 0 0 16"
                  Height="28"
                  IsEditable="False"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Name" />

        <TextBlock Grid.Row="2"
                   Grid.Column="0"
                   Text="Standard-Rechenhöhe [mm]:"
                   VerticalAlignment="Center"
                   Margin="0 0 12 16" />
        <TextBox x:Name="ComputationHeightInput"
                 Grid.Row="2"
                 Grid.Column="1"
                 VerticalContentAlignment="Center"
                 Margin="0 0 0 16"
                 Height="28" />

        <TextBlock Grid.Row="3"
                   Grid.Column="0"
                   Text="Standard Anzahl Obergeschosse:"
                   VerticalAlignment="Center"
                   Margin="0 0 12 16" />
        <TextBox x:Name="DefaultAboveCountInput"
                 Grid.Row="3"
                 Grid.Column="1"
                 VerticalContentAlignment="Center"
                 Margin="0 0 0 16"
                 Height="28" />

        <TextBlock Grid.Row="4"
                   Grid.Column="0"
                   Text="Standard Geschosshöhe Obergeschosse [mm]:"
                   VerticalAlignment="Center"
                   Margin="0 0 12 16" />
        <TextBox x:Name="DefaultAboveHeightInput"
                 Grid.Row="4"
                 Grid.Column="1"
                 VerticalContentAlignment="Center"
                 Margin="0 0 0 16"
                 Height="28" />

        <TextBlock Grid.Row="5"
                   Grid.Column="0"
                   Text="Standard Anzahl Untergeschosse:"
                   VerticalAlignment="Center"
                   Margin="0 0 12 16" />
        <TextBox x:Name="DefaultBelowCountInput"
                 Grid.Row="5"
                 Grid.Column="1"
                 VerticalContentAlignment="Center"
                 Margin="0 0 0 16"
                 Height="28" />

        <TextBlock Grid.Row="6"
                   Grid.Column="0"
                   Text="Standard Geschosshöhe Untergeschosse [mm]:"
                   VerticalAlignment="Center"
                   Margin="0 0 12 16" />
        <TextBox x:Name="DefaultBelowHeightInput"
                 Grid.Row="6"
                 Grid.Column="1"
                 VerticalContentAlignment="Center"
                 Margin="0 0 0 16"
                 Height="28" />

        <StackPanel Grid.Row="8"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Zurücksetzen"
                    Width="120"
                    Margin="0 0 12 0"
                    Padding="12 6"
                    Click="OnResetClick" />
            <Button Content="Abbrechen"
                    Width="110"
                    Margin="0 0 12 0"
                    Padding="12 6"
                    Click="OnCancelClick" />
            <Button Content="OK"
                    Width="110"
                    Padding="12 6"
                    Click="OnOkClick" />
        </StackPanel>
    </Grid>
</Window>

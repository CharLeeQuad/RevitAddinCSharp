<Window x:Class="RevitAddinCSharp.UI.LevelCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Geschosse anlegen"
        Height="320"
        Width="520"
        MinHeight="300"
        MinWidth="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Anzahl Obergeschosse:" VerticalAlignment="Center" Margin="0 0 12 16" />
        <TextBox x:Name="AboveCountInput" Grid.Row="0" Grid.Column="1" Text="5" VerticalContentAlignment="Center" Margin="0 0 0 16" Height="28" />

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Geschosshöhe Obergeschosse [mm]:" VerticalAlignment="Center" Margin="0 0 12 16" />
        <TextBox x:Name="AboveHeightInput" Grid.Row="1" Grid.Column="1" Text="3000" VerticalContentAlignment="Center" Margin="0 0 0 16" Height="28" />

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Anzahl Untergeschosse:" VerticalAlignment="Center" Margin="0 0 12 16" />
        <TextBox x:Name="BelowCountInput" Grid.Row="2" Grid.Column="1" Text="0" VerticalContentAlignment="Center" Margin="0 0 0 16" Height="28" />

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Geschosshöhe Untergeschosse [mm]:" VerticalAlignment="Center" Margin="0 0 12 16" />
        <TextBox x:Name="BelowHeightInput" Grid.Row="3" Grid.Column="1" Text="3000" VerticalContentAlignment="Center" Margin="0 0 0 16" Height="28" />

        <TextBlock Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" TextWrapping="Wrap" Foreground="#555" Margin="0 0 0 16">
            Werte in Millimetern eingeben. Das Erdgeschoss (0 mm) wird automatisch erzeugt.
        </TextBlock>

        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Abbrechen" Width="110" Margin="0 0 12 0" Padding="12 6" Click="OnCancelClick" />
            <Button Content="OK" Width="110" Padding="12 6" Click="OnOkClick" />
        </StackPanel>
    </Grid>
</Window>
